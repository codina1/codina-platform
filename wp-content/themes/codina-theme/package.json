{
  "name": "codina-theme",
  "version": "1.0.0",
  "description": "Codina WordPress Theme - RTL-first educational platform",
  "scripts": {
    "dev": "tailwindcss -i ./src/css/tailwind.css -o ./assets/css/main.css --watch",
    "build": "tailwindcss -i ./src/css/tailwind.css -o ./assets/css/main.css --minify",
    "js:dev": "vite build --watch --mode development",
    "js:build": "vite build --mode production"
  },
  "keywords": [
    "wordpress",
    "theme",
    "rtl",
    "persian",
    "farsi",
    "tailwind"
  ],
  "author": "Codina Team",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "postcss-rtl": "^2.0.0",
    "vite": "^5.0.8"
  }
}

